{% extends "::base.html.twig" %}

{% block title %}
Challenge Accepted
{% endblock %}

{% block body %}

<h3>Defi</h3>
<meta charset="UTF-8" />

<div class="row">
	{% if valid == 0 %}
	<div class="col s12 card-panel red center-align">
		<p>Une erreur s'est produite, veuillez rééssayer</p>
	</div>
	<div class="col s2 offset-s5">
	<a href="{{ path('challenge') }}" class="waves-effect waves-light btn">Réessayer</a>
	</div>
	{% else %}
	<div class="col s12 card-panel light-green accent-1 center-align">
		<p>Votre partie contre {{ opponent }} a bien été crée</p>
	</div>
	<div class="row">
	<div class="col s4 offset-s2">
	<a href="{{ path('dashboard') }}" class="waves-effect waves-light btn">Retourner au tableau de bord</a>
	</div><div class="col s4 offset-s1">
	<a href="{{ path('app_game_show',{id : gameId })}}" class="waves-effect waves-light btn">Aller à la partie</a>
	</div>
	</div>
	{% endif %}
</div>


{% endblock %}