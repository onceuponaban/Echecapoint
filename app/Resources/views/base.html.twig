<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}
        Échecs à Points
        {% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('css/materialize.min.css') }}" rel="stylesheet"/>
            <link href="{{ asset('css/materialize.css') }}" rel="stylesheet" />
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {%  if app.user!=null %}
        <ul id="dropdown_auth" class="dropdown-content">
        	<li><a class="blue-text" href="#">Profile</a></li>
        	<li><a class="blue-text" href="{{ path('app_logout') }}">Logout</a></li>
        </ul>
        {% endif %}
        
        <nav>
            <div class="nav-wrapper light-blue darken-1">
            	{% if app.user!=null %}
            	<a href="{{ path('dashboard') }}" class="brand-logo">&nbsp;Échecs à Points</a>
            	{% else %}
            	<a href="{{ path('app_index') }}" class="brand-logo">&nbsp;Échecs à Points</a>
            	{% endif %}
            	<ul class="right hide-on-med-and-down">
            	{% if app.user!=null %}
            		<li>
            			<a class="dropdown-button" href="#!" data-activates="dropdown_auth" >
            			{{ app.user.username }}
            			<i class="material-icons right">arrow_drop_down</i>
            			</a>
            		</li>
            		{% else %}
            		<li><a href="{{ path('app_login') }}">Login</a></li>
            		{% endif %}
            	</ul>
            </div>
        </nav>
    
    
    <div class="container">
        {% block body %}
        {% endblock %}
        </div>
       {% block javascripts %}
          <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
          <script type="text/javascript" src="{{ asset('js/materialize.min.js') }}"></script>
        {% endblock %}
    </body>
</html>
        